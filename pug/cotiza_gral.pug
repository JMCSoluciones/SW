extend ../components/template.pug
block content
    .slideCotizarGral.slide
        .slide__box
            p ¿Tienes dudas o #[strong requieres una cotización?]
            p  #[strong ¡ESCRÍBENOS!]
    .content.ContentCotizacionGral
        .titulo Llena este pequeño formulario, será un placer atenderte.
        .content-form.content-formContacto
            h3.content-formContacto-title Datos del contacto
            form(action = "")
                .form-floating.mb-3
                    input.form-control.form-control-lg(placeholder="Ingrese su nombre completo" type="text" name="nombre" aria-describedby="emailHelp" maxlength="40" required)#nombreCliente
                    label(for="nombreCliente") Nombre Completo
                .form-floating.mb-3
                    input.form-control.form-control-lg(type="tel" name="telefono"  maxlength="10" aria-describedby="emailHelp" required placeholder="Ingrese su télefono")#exampleInputEmail1
                    label(for="exampleInputEmail1") Teléfono a 10 dígitos
                .form-floating.mb-3
                    input.form-control.form-control-lg(type="email" name="email" aria-describedby="emailHelp" placeholder="Email válido")#exampleInputEmail1
                    label(for="exampleInputEmail1") Email 
                .form-floating.mb-3
                    input.form-control.form-control-lg(type="text" name="nombre_empresa" aria-describedby="emailHelp" placeholder="Nombre de la empresa")#exampleInputEmail1
                    label(for="exampleInputEmail1") Nombre de la empresa
                .form-floating.mb-3
                    textarea.form-control.form-control-lg(type="text" name="mensaje" aria-describedby="emailHelp" placeholder="Ingrese su mensaje")#exampleInputEmail1
                    label(for="exampleInputEmail1") Mensaje
                button.btn.btn-dark.btn-lg(data-bs-target='#exampleModalToggle2' data-bs-toggle='modal' data-bs-dismiss='modal') Enviar
        #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog.modal-dialog-centered(role='document')
                .modal-content
                    .modal-header
                        h5#exampleModalLabel.modal-title Solicitud 
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body
                        | Cotización realizada con exito!
                    .modal-footer
                        button.btn.btn-primary(data-bs-target='#exampleModalToggle' data-bs-toggle='modal' data-bs-dismiss='modal') Cancelar 
                        button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Aceptar



